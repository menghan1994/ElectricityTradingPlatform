# PostgreSQL (共用连接配置)
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432
POSTGRES_DB=electricity_trading
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme

# PostgreSQL 服务专用角色 (生产环境应使用专用角色实现权限隔离)
# api-server: app_user (public/timeseries 读写)
# agent-engine: agent_user (public 只读, langgraph 读写)
# 开发环境可使用 postgres 超级用户，生产环境必须切换
APP_DB_USER=app_user
APP_DB_PASSWORD=app_user_password
AGENT_DB_USER=agent_user
AGENT_DB_PASSWORD=agent_user_password

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=changeme-use-strong-secret
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# LLM
LLM_BASE_URL=http://ollama:11434/v1
LLM_MODEL=qwen3:8b
LLM_API_KEY=

# Langfuse
LANGFUSE_HOST=http://langfuse:3000
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_NEXTAUTH_SECRET=changeme-langfuse-secret
LANGFUSE_SALT=changeme-langfuse-salt

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# App
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=DEBUG
CORS_ORIGINS=http://localhost:80,http://localhost:5173
